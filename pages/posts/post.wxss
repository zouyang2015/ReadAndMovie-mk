.post-container {
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 40rpx 0;
  background: #ffffff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5rpx;
}
.post-author-date {
  display: flex;
  align-items: center;
  margin: 10rpx 10rpx 20rpx 10rpx;
}
.post-author {
  width: 60rpx;
  height: 60rpx;
}
.post-date {
  margin: 0 0 0 20rpx;
}
.post-title {
  margin: 0 0 10px 20rpx;
  font-size: 34rpx;
  font-weight: 600;
  color: #333333;
}
.post-image {
  width: 100%;
  height: 340rpx;
  margin: 0 0 15px 0;
}
.post-content {
  color: #666;
  font-size: 28rpx;
  margin: 0 20rpx 0 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post-like {
  display: flex;
  align-items: center;
  font-size: 13px;
  line-height: 16px;
  margin: 10px 0 10px 10px;
}
.post-like-image {
  width: 16px;
  height: 16px;
  margin-right: 8px;
}
.post-like-font {
  margin-right: 20px;
  color: #999999;
}