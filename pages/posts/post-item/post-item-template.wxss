.post-container {
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 40rpx 0;
  background: #ffffff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5rpx;
}
.post-author-date {
  display: flex;
  align-items: center;
  padding: 10px 10rpx 0 10rpx;
}
.post-author {
  flex: 0 0 60rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.post-date {
  flex: 1;
  margin: 0 0 0 20rpx;
}
.post-title {
  padding: 20px 0 0 20rpx;
  font-size: 34rpx;
  font-weight: 600;
  color: #333333;
  width: 100%;
}
.post-image {
  height: 340rpx;
  margin: 15px 0 15px 0;
}
.post-content {
  display: flex;
  color: #666;
  font-size: 28rpx;
  padding: 0 20rpx 0 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post-like {
  display:block;
  align-items: center;
  font-size: 13px;
  line-height: 16px;
  margin: 10px 0 10px 10px;
}
.post-like-image {
  width: 16px;
  height: 16px;
  margin-right: 8px;
}
.post-like-font {
  margin-right: 20px;
  color: #999999;
}